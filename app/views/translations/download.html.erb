<h1>Downloading ‘<%= @translation.book.title %>’
<% if user_admin %>
  <%= link_to image_tag("misc/edit.png"), edit_translation_url(@translation) %>
  <%= link_to image_tag("misc/delete.png"), @translation, :confirm => 'Are you sure you want to delete this translation?', :method => :delete %>
<% end %>
</h1>

<%= '<p><i>Original text</i></p>' if @translation.original %>
<%= "<p><strong>Note:</strong> #{@translation.note}</p>" unless @translation.note.empty? %>
<%= "<p><strong>Date of publication:</strong> #{@translation.date_of_publication}</p>" unless @translation.date_of_publication %>
<%= "<p><strong>Language:</strong> #{Languages::LANGUAGES[@translation.language][0]}" %>
<%= "<p><strong>Source:</strong> #{link_to @translation.source_url, @translation.source_url, :target => '_blank'}" %>
<%= "<p><strong>MD5 hash:</strong> #{text_field_tag('md5', @translation.md5, :size => 16, :readonly => true)}</p>" %>

<% form_for :translation, @translation, :url => download_file_url(@translation) do |f| %>
  <%= f.error_messages :header_message => "Sorry, you couldn't download this book.", :message => "" %>
  <% unless @captcha_not_necessary %>
    <% content_tag :fieldset do %>
      <%= content_tag :legend, "You are not a bot, huh?" %>
      <%= recaptcha_tags.html_safe %>
    <% end %>
  <% end %>
  <%= f.submit "Download"%>
<% end %>
<p>
  <%= link_to "Back to #{@translation.book.title}", book_url (@translation.book) %>
</p>
