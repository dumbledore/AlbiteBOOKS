<% focus_on_load('note') %>
<% form_for @translation, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <% content_tag :fieldset do %>
    <%= content_tag :legend, "Translation" %>
    <%= f.label :book %>
    <%= f.text_field :book, :value => @translation.book.title, :disabled => 1 %>
    <%= f.hidden_field :book_id %><!-- this one is important -->

    <%= f.label :note %>
    <%= f.text_field :note %>
    
    <%= f.label :language %>
    <%= f.select :language, options_for_select(Languages::LANGUAGES, 41)%>

    <%= f.label :book_file %>
    <%= f.file_field :book_file %>

    <%= f.label :original %>
    <%= f.check_box :original %>

  <% end %>
  <%= f.submit "Submit", :class => 'small', :disable_with => "Please wait..." %>
<% end %>