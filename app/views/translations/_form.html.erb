<% focus_on_load('translation_note') %>
<% form_for @translation, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>

  <% content_tag :fieldset do %>
    <%= content_tag :legend, "Translation" %>
    <%= f.label :book %>
    <%= f.text_field :book, :value => h(@translation.book.title), :disabled => 1 %>
    <%= f.hidden_field :book_id %>

    <%= f.label :note %>
    <%= f.text_field :note %>

    <%= f.label :date_of_publication %>
    <%= f.text_field :date_of_publication %>

    <%= f.label :source_url %>
    <%= f.text_field :source_url %>
    
    <%= f.label :language %>
    <% lang = @translation.language %>
    <% lang = 41 if (lang == 0 or lang.nil?) %>
    <%= f.select :language, options_for_select(Languages::LANGUAGES, lang)%>

    <%= f.label :book_file %>
    <%= f.file_field :book_file, :accesskey => '1', :title => 'ALT + 1' %>

  <% end %>
  <%= f.submit 'Submit', :class => 'small', :disable_with => 'Please wait...', :accesskey => '2', :title => 'ALT + 2' %>
<% end %>