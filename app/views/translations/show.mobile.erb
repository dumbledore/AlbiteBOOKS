<%= h1 "Downloading ‘#{h(@translation.book.title)}’" %>

<% if @translation.original %>
  <p>
    <strong>Original text</strong>
  </p>
<% end %>

<%= simple_section(@translation.note, 'Note') %>
<%= simple_section(@translation.date_of_publication, 'Date of publication') %>
<%= simple_section(Languages::LANGUAGES[@translation.language][0], 'Language') %>
<%= h2 'Download' %>
<%= mobile_link_to(translation_file_url(@translation), 'Download file', @translation.filesize, true, 'download', true) %>

<% content_for(:back) do %>
  <%= mobile_link_to_thumbnail_or_icon(book_url(@translation.book), h(@translation.book.title), 'Back to book', h(@translation.book.thumbnail_url), 'book') %>
<% end %>