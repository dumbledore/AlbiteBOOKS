<% title @book.title %>

<h1>
  <%=h @book.title %><br />
  <span class="subtitle">by <%= h @book.author.name %></span>
</h1>
<div class="shadow_container"><div class="shadow"></div></div>

<% unless @book.thumbnail_url.blank? %>
  <div class="thumbnail">
    <%= image_tag(@book.thumbnail_url, :class =>  'thumbnail') %>
  </div>
<% end %>

<p>
  <%= @book.description %>
</p>

<% unless @book.date_of_first_publication.empty? %>
  <p>
    <strong>Date of first publication:</strong>
    <%= @book.date_of_first_publication %>
  </p>
<% end %>

<% unless @book.original_language.empty? %>
  <p>
    <strong>Original language:</strong>
    <%= @book.original_language %>
  </p>
<% end %>

<% unless @book.number_of_pages.nil? %>
  <p>
    <strong>Number of pages:</strong>
    <%= @book.number_of_pages %>
  </p>
<% end %>

<% if @book.book_aliases.size > 1 %>
  <p>
  <strong>Also known as: </strong>
  <% aliases = [] %>
  <% for aliaz in @book.book_aliases %>
    <% aliases << aliaz.title unless @book.alias_title == aliaz %>
  <% end %>
  <%= aliases.join(", ") %>
  </p>
<% end %>

<h2>Download book &amp; translations</h2>
<div class="shadow_container"><div class="shadow"></div></div>

<% @translations = @book.translations %>
<%= render :partial => 'translations/index' %>

<% unless @book.genre_list.empty? %>
  <h2>Genres</h2>
  <div class="shadow_container"><div class="shadow"></div></div>
  <% for genre in @book.genre_list %>
    <%= mobile_link_to(genre_url(h(genre)), h(genre), nil, true, 'tag') %>
  <% end %>
<% end %>

<% unless @book.subject_list.empty? %>
  <h2>Subjects</h2>
  <div class="shadow_container"><div class="shadow"></div></div>
  <% for subject in @book.subject_list %>
    <%= mobile_link_to(subject_url(h(subject)), h(subject), nil, true, 'tag') %>
  <% end %>
<% end %>

<% content_for(:back) do %>
  <% if @book.author.thumbnail_url.blank? %>
    <%= mobile_link_to(author_url(@book.author), @book.author.name, 'Back to author', true, 'user') %>
  <% else %>
    <%= mobile_link_to(author_url(@book.author), @book.author.name, 'Back to author', true, @book.author.thumbnail_url, false) %>
  <% end %>
<% end %>