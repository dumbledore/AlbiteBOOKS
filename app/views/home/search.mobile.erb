<%= h1 "Search results for ‘#{h(@query)}’" %>
<%= h2 'Books found' %>
<%= render :partial => 'books/aliases_index' %>
<%= will_paginate(@book_aliases, :renderer => 'WillPaginate::MobileRenderer') if @book_aliases %>

<%= h2 'Authors found' %>
<%= render :partial => 'authors/aliases_index' %>
<%= will_paginate(@author_aliases, :renderer => 'WillPaginate::MobileRenderer') if @author_aliases %>

<% content_for(:back) do %>
  <%= mobile_link_to(books_url, 'Search', 'Search for another book', true, 'zoom') %>
  <%= mobile_link_to(authors_url, 'Search', 'Search for another author', true, 'zoom') %>
<% end %>