<%= h1 "Search results for ‘#{h(@query)}’" %>
<%= h2 'Books found' %>
<% @show_author_name = true %>
<%= render :partial => 'books/index' %>
<%= will_paginate(@books, :renderer => 'WillPaginate::MobileRenderer') if @books %>

<%= h2 'Authors found' %>
<%= render :partial => 'authors/index' %>
<%= will_paginate(@authors, :renderer => 'WillPaginate::MobileRenderer') if @authors %>

<% content_for(:back) do %>
  <%= mobile_link_to(books_url, 'Search', 'Search for another book', true, 'book') %>
  <%= mobile_link_to(authors_url, 'Search', 'Search for another author', true, 'user') %>
<% end %>