<% focus_on_load('alias_title') %>

<% form_for @alias do |f| %>
  <%= f.error_messages %>

  <% content_tag :fieldset do %>
    <%= content_tag :legend, "Alias" %>
    <%= f.label :book %>
    <%= f.text_field :book, :value => @book.title, :disabled => 1 %>
    <%= f.hidden_field :book_id %>

    <%= f.label :title %>
    <%= f.text_field :title %>
  <% end %>
  
  <%= f.submit "Submit", :class => 'small', :disable_with => "Please wait..." %>
<% end %>
