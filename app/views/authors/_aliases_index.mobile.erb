<% if @author_aliases and not @author_aliases.empty? %>
  <% for aliaz in @author_aliases %>
    <% author = aliaz.author %>
    <% if author.ready %>
      <% subtitle = subtitle(author, author.date_and_place_of_birth) %>
      <%= mobile_link_to_thumbnail_or_icon(author_url(author), h(aliaz.name_abbreviated(:name_reversed)), subtitle, author.thumbnail_url, 'author')%>
    <% end %>
  <% end %>
<% else %>
  <p>
    <i><%= @no_author_aliases_message %></i>
  </p>
<% end %>
