<% title "Edit Author" %>
<h1>Edit Author
  <%= link_to image_tag("misc/show.png"), @author %>
</h1>

<%= render :partial => 'form' %>
<% puts @author.inspect
puts @author.aliases.inspect %>

<% content_tag :fieldset do %>
  <%= content_tag :legend, "Alases" %>
  <% @aliases = @author.aliases %>
  <%= render :partial => 'aliases/index' %>
  <p>
    <b><%= link_to "New alias", :controller => 'aliases', :action => 'new', :author => @author %></b>
  </p>
<% end %>

<% content_tag :fieldset do %>
  <%= content_tag :legend, "Books" %>
  <% @books = @author.books %>
  <%= render :partial => 'books/index' %>
  <p>
    <b><%= link_to "New book", :controller => 'books', :action => 'new', :author => @author %></b>
  </p>
<% end %>

<p>
  <%= link_to "Show author", @author %> |
  <%= link_to "Back to Authors", authors_path %>
</p>