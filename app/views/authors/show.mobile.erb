<% title @author.name %>

<h1>
  <%=h @author.name %>
</h1>
<div class="shadow_container"><div class="shadow"></div></div>

<% unless @author.thumbnail_url.blank? %>
  <div class="thumbnail">
    <%= image_tag(@author.thumbnail_url, :class =>  'thumbnail') %>
  </div>
<% end %>

<p>
  <%= @author.description %>
</p>

<% unless @author.date_and_place_of_birth.empty? %>
  <p>
    <strong>Born:</strong>
    <%= @author.date_and_place_of_birth %>
  </p>
<% end %>

<% unless @author.date_and_place_of_death.empty? %>
  <p>
    <strong>Died:</strong>
    <%= @author.date_and_place_of_death %>
  </p>
<% end %>

<% unless @author.country_of_nationality.empty? %>
  <p>
    <strong>Country of nationality:</strong>
    <%= @author.country_of_nationality %>
  </p>
<% end %>

<% if @author.author_aliases.size > 1 %>
  <p>
  <strong>Also known as: </strong>
  <% aliases = [] %>
  <% for aliaz in @author.author_aliases %>
    <% aliases << aliaz.name unless @author.alias_name == aliaz %>
  <% end %>
  <%= aliases.join(", ") %>
  </p>
<% end %>

<h2>Books</h2>
<div class="shadow_container"><div class="shadow"></div></div>

<% @books = @author.books %>
<% @book_thumbnails = true %>
<% @no_books_message = 'No books have been added, so far.' %>
<% @show_publication_date = true %>

<%= render :partial => 'books/index' %>

<% content_for(:back) do %>
  <%= mobile_link_to(authors_url, 'Authors', 'Search for another author', true, 'user') %>
<% end %>