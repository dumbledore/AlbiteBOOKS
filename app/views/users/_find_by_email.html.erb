<% form_for :user, :url => { :action => @xurl  } do |f| %>
  <%= f.error_messages :header_message => @xmessage,
                       :message => "You'll need to fix these:" %>
  <% content_tag :fieldset do %>
    <%= content_tag :legend, 'Email' %>
      <%= f.label :email %>
      <%= f.text_field :email %>
    <% end %>
  <% content_tag :fieldset do %>
    <%= content_tag :legend, 'You are not a bot, huh?' %>
    <%= recaptcha_tags %>
  <% end %>
  <%= f.submit 'Submit' %>
<% end %>
